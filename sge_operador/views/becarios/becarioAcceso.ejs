<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head'); %>
  
  <body>
	<%- include('../partials/nav'); %>

	<div class="container my-5">
	  <div class="row justify-content-center">
		<div class="col-md-10">
		  <form method="POST" action="/becarios/acceso">
		    <h3>Sistema de Gestión de Equipos</h3>
			<hr>
			<h2>Acceso</h2>
			
			<div class="row">
			  <div class="col-md-6 my-2">
				<div class="form-group">
				  <label><b># Becario:</b></label>
				  <input 
				    type="number" 
					name="becario" 
					class="form-control <%= locals.errors && errors.becario ? 'is-invalid' : null %>"
					value="<%= locals.oldData ? oldData.becario : null %>"
				  >
				</div>
				<% if (locals.errors && errors.becario) { %>
				  <div class="text-danger">
					<%= errors.becario.msg %>
				  </div>
				<% } %>
			  </div>
						
			  <div class="col-md-6 my-2">
				<div class="form-group">
				  <label><b>Contraseña:</b></label>
				  <input 
				    type="password" 
				    name="contrasenia" 
					class="form-control <%= locals.errors && errors.contrasenia ? 'is-invalid' : null %>">
				</div>
				<% if (locals.errors && errors.contrasenia) { %>
				  <div class="text-danger">
					<%= errors.contrasenia.msg %>
				  </div>
				<% } %>
			  </div>
						
			  <div class="col-12 my-3">
				<button type="submit" class="btn btn-primary">Acceder</button>
			  </div>

			  <!-- <hr>
			  <p>
				¿Aún no se ha registrado? 
				<br>
				<a href="/becarios/registro">Crear cuenta</a>
			  </p> -->
			</div>
		  </form>
		</div>
	  </div>
	</div>
	
	<%- include('../partials/footer'); %>
  </body>
</html>