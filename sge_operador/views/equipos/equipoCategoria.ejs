				  <p>
					<b class="text-white"><%= equipo.marca %> - </b>
				    <i class="text-white"><%= equipo.id %></i>
				  </p>
			    </div>
		      </a>
		    </div>  
		  <% } %>
	    </div>
	  </section>	  
	</main>

	<!-- //Main-banner -->
	
	<%- include('../partials/footer'); %>
