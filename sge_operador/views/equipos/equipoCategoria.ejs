<html lang="es">
  <%- include('../partials/head'); %>

  <body>
	<%- include('../partials/nav'); %>
	
	<!-- Main-banner -->
	<main>
	  <%- include('../partials/aside'); %> 

	  <section>	
	    <div class="lista-equipos">
		  <% for (const equipo of equipos) { %>  
		    <div class="descripcion-equipo">
			  <a href="/equipos/detalles/<%= equipo.id %>">
